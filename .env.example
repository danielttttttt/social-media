# Campus Connect Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# NEXT.JS CONFIGURATION
# ============================================================================

# Application URL (for frontend)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (for API calls)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MySQL/PostgreSQL Database
DATABASE_URL="mysql://username:password@localhost:3306/campus_connect"
# OR for PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/campus_connect"

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secrets (Generate strong random strings)
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# JWT Expiration Times
JWT_EXPIRES_IN="1d"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Hashing
BCRYPT_ROUNDS=12

# Session Settings
SESSION_SECRET="your-session-secret-here"
SESSION_MAX_AGE=86400000

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Upload Settings
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
ALLOWED_FILE_TYPES="pdf,doc,docx,txt"

# Cloud Storage (Optional - if using AWS S3, Cloudinary, etc.)
CLOUD_STORAGE_PROVIDER="local"
# CLOUD_STORAGE_PROVIDER="s3" | "cloudinary" | "gcs"

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_S3_REGION="us-east-1"

# Cloudinary Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email Service Provider
EMAIL_PROVIDER="smtp"
# EMAIL_PROVIDER="sendgrid" | "mailgun" | "smtp"

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_NAME="Campus Connect"
SMTP_FROM_EMAIL="noreply@campusconnect.com"

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=""

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=""
MAILGUN_DOMAIN=""

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# ============================================================================

REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Cache Settings
CACHE_TTL=3600
SESSION_STORE="memory"
# SESSION_STORE="redis" | "memory"

# ============================================================================
# REAL-TIME FEATURES (WebSocket/Socket.IO)
# ============================================================================

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN="http://localhost:3000"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level
LOG_LEVEL="info"
# LOG_LEVEL="debug" | "info" | "warn" | "error"

# Log Directory
LOG_DIR="./logs"

# ============================================================================
# RATE LIMITING
# ============================================================================

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# ============================================================================
# SEARCH CONFIGURATION (Optional - for advanced search)
# ============================================================================

# Search Provider
SEARCH_PROVIDER="database"
# SEARCH_PROVIDER="elasticsearch" | "algolia" | "database"

# Elasticsearch Configuration (if using Elasticsearch)
ELASTICSEARCH_URL="http://localhost:9200"

# Algolia Configuration (if using Algolia)
ALGOLIA_APP_ID=""
ALGOLIA_API_KEY=""
ALGOLIA_SEARCH_KEY=""

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

# Error Tracking
SENTRY_DSN=""

# Analytics
GOOGLE_ANALYTICS_ID=""

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=""

# ============================================================================
# SOCIAL LOGIN (Optional)
# ============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================================================
# PUSH NOTIFICATIONS (Optional)
# ============================================================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=""
FCM_PROJECT_ID=""

# Apple Push Notifications
APNS_KEY_ID=""
APNS_TEAM_ID=""
APNS_PRIVATE_KEY=""

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Mode
NODE_ENV=development
# NODE_ENV=production | development | test

# Debug Settings
DEBUG=true
VERBOSE_LOGGING=true

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH="/api-docs"

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# CORS Settings
CORS_ORIGIN="http://localhost:3000"
# CORS_ORIGIN="https://yourdomain.com"

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Compression
ENABLE_COMPRESSION=true

# ============================================================================
# BACKUP CONFIGURATION (Production)
# ============================================================================

# Database Backup
DB_BACKUP_ENABLED=false
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_RETENTION_DAYS=30

# File Backup
FILE_BACKUP_ENABLED=false
FILE_BACKUP_SCHEDULE="0 3 * * *"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable Features
ENABLE_GROUPS=true
ENABLE_MESSAGING=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME=true
ENABLE_SEARCH=true

# Beta Features
ENABLE_BETA_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=false